---
import Layout from '../layouts/Layout.astro';

// 模拟博客文章数据
const blogPosts = [
  {
    id: 1,
    title: "人工智能的未来：从机器学习到通用智能",
    excerpt: "探索人工智能的发展历程，从早期的机器学习算法到如今的通用人工智能技术，以及未来可能的发展方向...",
    author: "NeoMatrix",
    date: "2024-01-15",
    readTime: "8 分钟",
    category: "AI技术",
    tags: ["人工智能", "机器学习", "未来科技"],
    image: "/images/the-transformer.jpg",
    featured: true
  },
  {
    id: 2,
    title: "现代前端开发的最佳实践",
    excerpt: "深入探讨现代前端开发中的关键概念，包括组件化设计、状态管理、性能优化等核心话题...",
    author: "NeoMatrix",
    date: "2024-01-10",
    readTime: "12 分钟",
    category: "前端开发",
    tags: ["React", "Vue", "性能优化"],
    image: "/images/vaswani.jpg",
    featured: false
  },
  {
    id: 3,
    title: "设计思维在产品开发中的应用",
    excerpt: "如何将设计思维融入产品开发流程，从用户研究到原型设计，再到最终的产品交付...",
    author: "NeoMatrix",
    date: "2024-01-05",
    readTime: "10 分钟",
    category: "产品设计",
    tags: ["设计思维", "用户体验", "产品开发"],
    image: "/images/feynman.jpg",
    featured: false
  },
  {
    id: 4,
    title: "区块链技术的商业应用前景",
    excerpt: "分析区块链技术在不同行业的应用潜力，从金融到供应链管理，再到数字身份认证...",
    author: "NeoMatrix",
    date: "2023-12-28",
    readTime: "15 分钟",
    category: "区块链",
    tags: ["区块链", "DeFi", "Web3"],
    image: "/images/naval.jpg",
    featured: false
  },
  {
    id: 5,
    title: "数据科学中的伦理问题",
    excerpt: "探讨数据科学和人工智能发展过程中面临的伦理挑战，以及如何建立负责任的AI系统...",
    author: "NeoMatrix",
    date: "2023-12-20",
    readTime: "11 分钟",
    category: "数据科学",
    tags: ["数据伦理", "AI伦理", "隐私保护"],
    image: "/images/socrates.jpg",
    featured: false
  },
  {
    id: 6,
    title: "云原生架构的设计原则",
    excerpt: "深入了解云原生应用的设计理念，包括微服务架构、容器化部署、服务网格等关键技术...",
    author: "NeoMatrix",
    date: "2023-12-15",
    readTime: "14 分钟",
    category: "云技术",
    tags: ["云原生", "微服务", "Kubernetes"],
    image: "/images/KK.jpg",
    featured: false
  }
];

const categories = ["全部", "AI技术", "前端开发", "产品设计", "区块链", "数据科学", "云技术"];
---

<Layout title="博客 - NeoMatrix" metaDescription="探索技术前沿，分享创新思维">
  <div class="max-w-6xl mx-auto px-4 py-8">
    <!-- 页面标题 -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
        博客
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        探索技术前沿，分享创新思维，与我们一起发现数字世界的无限可能
      </p>
    </div>

    <!-- 搜索和筛选 -->
    <div class="mb-8">
      <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
        <!-- 搜索框 -->
        <div class="relative w-full md:w-96">
          <input
            type="text"
            placeholder="搜索文章..."
            class="w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
          />
          <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
        
        <!-- 分类标签 -->
        <div class="flex flex-wrap gap-2">
          {categories.map((category) => (
            <button
              class={`px-4 py-2 rounded-full text-sm font-medium transition-all ${
                category === "全部" 
                  ? "bg-blue-600 text-white" 
                  : "bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600"
              }`}
            >
              {category}
            </button>
          ))}
        </div>
      </div>
    </div>

    <!-- 特色文章 -->
    {blogPosts.filter(post => post.featured).map((post) => (
      <article class="mb-8 bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden">
        <div class="grid md:grid-cols-2 gap-0">
          <div class="relative h-64 md:h-full">
            <img
              src={post.image}
              alt={post.title}
              class="w-full h-full object-cover"
            />
            <div class="absolute top-4 left-4">
              <span class="px-3 py-1 bg-blue-600 text-white text-xs font-medium rounded-full">
                特色
              </span>
            </div>
          </div>
          <div class="p-6 md:p-8 flex flex-col justify-center">
            <div class="flex items-center gap-4 mb-3 text-sm text-gray-500 dark:text-gray-400">
              <div class="flex items-center gap-1">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <span>{post.author}</span>
              </div>
              <div class="flex items-center gap-1">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span>{post.date}</span>
              </div>
              <span>· {post.readTime}</span>
            </div>
            
            <h3 class="mb-3 text-2xl font-bold text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors cursor-pointer">
              {post.title}
            </h3>
            
            <p class="mb-4 text-gray-600 dark:text-gray-300 line-clamp-3">
              {post.excerpt}
            </p>
            
            <div class="flex flex-wrap gap-2 mb-4">
              {post.tags.map((tag) => (
                <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 text-xs rounded-md">
                  {tag}
                </span>
              ))}
            </div>
            
            <button class="flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors font-medium">
              阅读全文
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </button>
          </div>
        </div>
      </article>
    ))}

    <!-- 文章网格 -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {blogPosts.filter(post => !post.featured).map((post) => (
        <article class="bg-white dark:bg-gray-800 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 hover:-translate-y-1 overflow-hidden">
          <div class="relative h-48">
            <img
              src={post.image}
              alt={post.title}
              class="w-full h-full object-cover"
            />
            <div class="absolute top-3 left-3">
              <span class="px-2 py-1 bg-gray-800 dark:bg-gray-700 text-white text-xs font-medium rounded-md">
                {post.category}
              </span>
            </div>
          </div>
          
          <div class="p-6">
            <div class="flex items-center gap-4 mb-3 text-sm text-gray-500 dark:text-gray-400">
              <div class="flex items-center gap-1">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <span>{post.author}</span>
              </div>
              <div class="flex items-center gap-1">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span>{post.date}</span>
              </div>
            </div>
            
            <h5 class="mb-3 text-lg font-bold text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors cursor-pointer line-clamp-2">
              {post.title}
            </h5>
            
            <p class="mb-4 text-gray-600 dark:text-gray-300 line-clamp-3">
              {post.excerpt}
            </p>
            
            <div class="flex items-center justify-between">
              <div class="flex flex-wrap gap-1">
                {post.tags.slice(0, 2).map((tag) => (
                  <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 text-xs rounded-md">
                    {tag}
                  </span>
                ))}
                {post.tags.length > 2 && (
                  <span class="text-xs text-gray-500">+{post.tags.length - 2}</span>
                )}
              </div>
              
              <button class="flex items-center gap-1 text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors font-medium">
                阅读
                <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </button>
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- 分页 -->
    <div class="flex justify-center mt-12">
      <div class="flex items-center gap-2">
        <button class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-gray-500 dark:text-gray-400 disabled:opacity-50 disabled:cursor-not-allowed">
          上一页
        </button>
        <button class="px-3 py-2 bg-blue-600 text-white rounded-md">
          1
        </button>
        <button class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
          2
        </button>
        <button class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
          3
        </button>
        <span class="text-gray-500">...</span>
        <button class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
          10
        </button>
        <button class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
          下一页
        </button>
      </div>
    </div>
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
