---
import ThemeProvider from "../components/theme-provider";
import Navbar from "../components/navbar.tsx";
export interface Props {
  title: string;
  metaDescription?: string;
}

const { title, metaDescription } = Astro.props;
// import BaseHead from '../components/BaseHead.astro';
// import Footer from '../components/Footer.astro';
---
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <title>{title} by NEONITY</title>
    <meta name="description" content={metaDescription} />
    <meta name="generator" content={Astro.generator} />
    <!-- KaTeX CSS for LaTeX math rendering -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous" />
    <!-- Mobile math scroll optimization -->
    <script src="/js/mobile-math.js" defer></script>
    <!-- <BaseHead title={title}/> -->
    <script>
      (function() {
        try {
          var theme = localStorage.getItem('theme');
          if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
          } else {
            document.documentElement.classList.remove('dark');
          }
        } catch (e) {}
      })();
    </script>
  </head>
  <body>
    <ThemeProvider client:only="react">
      <div class="tech-bg" style="z-index: -1; opacity: 0.7;"></div>
      <article>
        <div class="max-w-[375px] mx-auto mt-4 md:max-w-[684px] md:mx-auto">
          <Navbar client:only="react" />
        </div>
        <slot /> <!-- your content is injected here -->
      </article>
    </ThemeProvider>
    <!-- <Footer /> -->
  </body>
  <style>
    body {
      margin: 0;
      padding: 0;
      min-height: 100vh;
      position: relative;
      overflow-x: hidden;
    }
    .tech-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      z-index: 0;
      pointer-events: none;
      background: radial-gradient(circle at 50% 40%, #fff 0%, #f8f8f8 60%, #f3e7ff 100%);
      overflow: hidden;
      opacity: 0.7;
      animation: bgMove 10s ease-in-out infinite alternate;
    }
    .dark .tech-bg {
      background: radial-gradient(circle at 50% 40%, #181c24 0%, #23283a 60%, #2d3344 100%);
    }
    @keyframes bgMove {
      0% { background-position: 0% 50%; }
      100% { background-position: 100% 50%; }
    }
    .tech-bg::before {
      content: "";
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background-image: repeating-linear-gradient(90deg, rgba(255,255,255,0.05) 0, rgba(255,255,255,0.05) 1px, transparent 1px, transparent 40px),
                        repeating-linear-gradient(0deg, rgba(255,255,255,0.05) 0, rgba(255,255,255,0.05) 1px, transparent 1px, transparent 40px);
      pointer-events: none;
    }
    article {
      max-width: 800px;
      margin: 20px auto;
      position: relative;
      z-index: 1;
      background: rgba(255,255,255,0.92);
      color: #222;
      border-radius: 16px;
      box-shadow: 0 2px 16px 0 rgba(0,0,0,0.04);
      transition: background 0.3s, color 0.3s;
      padding: 10px 10px 50px 10px;
    }
    .dark article {
      background: rgba(24,28,36,0.96);
      color: #e5e7eb;
      box-shadow: 0 2px 16px 0 rgba(0,0,0,0.32);
    }
    .dark h1, .dark h2, .dark h3, .dark h4, .dark h5, .dark h6 {
      color: #fff;
    }
    .dark a {
      color: #7dd3fc;
      text-decoration-thickness: 2px;
    }
    .dark a:hover {
      color: #a5b4fc;
      text-decoration: underline;
    }
    .dark .text-gray-500, .dark .text-gray-700 {
      color: #b6b8c3 !important;
    }
    .dark .border, .dark .rounded-lg, .dark .rounded-md {
      border-color: #334155 !important;
    }
    .dark img {
      filter: brightness(0.92) contrast(1.08);
    }
    @media (max-width: 600px) {
      article {
        max-width: 100vw;
        margin: 8px 8px 0 8px;
        border-radius: 8px;
        padding: 8px 8px 32px 8px;
      }
    }
    @font-face {
      font-family: 'Source Han Serif SC';
      src: url('/fonts/SourceHanSerifCN-Regular.otf') format('opentype');
      font-weight: normal;
      font-style: normal;
    }
    
    /* KaTeX custom styles for dark mode */
    .dark .katex {
      color: #e5e7eb;
    }
    
    .dark .katex-display {
      color: #e5e7eb;
    }
    
    .dark .katex .mord {
      color: #e5e7eb;
    }
    
    .dark .katex .mbin {
      color: #e5e7eb;
    }
    
    .dark .katex .mrel {
      color: #e5e7eb;
    }
    
    .dark .katex .mopen {
      color: #e5e7eb;
    }
    
    .dark .katex .mclose {
      color: #e5e7eb;
    }
    
    .dark .katex .mpunct {
      color: #e5e7eb;
    }
    
    .dark .katex .mord.text {
      color: #e5e7eb;
    }
    
    /* Light mode KaTeX styles */
    .katex {
      color: #222;
    }
    
    .katex-display {
      color: #222;
    }
    
    .katex .mord {
      color: #222;
    }
    
    .katex .mbin {
      color: #222;
    }
    
    .katex .mrel {
      color: #222;
    }
    
    .katex .mopen {
      color: #222;
    }
    
    .katex .mclose {
      color: #222;
    }
    
    .katex .mpunct {
      color: #222;
    }
    
    .katex .mord.text {
      color: #222;
    }
    
    /* Mobile optimization for KaTeX */
    @media (max-width: 768px) {
      /* 行内公式优化 */
      .katex {
        font-size: 0.9em !important;
        max-width: 100% !important;
        width: 100% !important;
        overflow-x: auto !important;
        overflow-y: hidden !important;
        box-sizing: border-box !important;
      }
      
      /* 块级公式优化 */
      .katex-display {
        font-size: 0.85em !important;
        margin: 1em 0 !important;
        padding: 0.5em 0 !important;
        overflow-x: auto !important;
        overflow-y: hidden !important;
        -webkit-overflow-scrolling: touch !important;
        max-width: 100% !important;
        width: 100% !important;
        box-sizing: border-box !important;
      }
      
      /* 长公式容器 */
      .katex-display > .katex {
        display: block !important;
        text-align: left !important;
        max-width: 100% !important;
        width: 100% !important;
        overflow-x: auto !important;
        white-space: nowrap !important;
        box-sizing: border-box !important;
      }
      
      /* 强制所有KaTeX元素不溢出 */
      .katex,
      .katex *,
      .katex-display,
      .katex-display * {
        max-width: 100% !important;
        box-sizing: border-box !important;
      }
      
      /* 矩阵优化 */
      .katex .array {
        overflow-x: auto;
        max-width: 100%;
      }
      
      /* 分数优化 */
      .katex .frac-line {
        min-width: 0.5em;
      }
      
      /* 求和符号优化 */
      .katex .sum {
        font-size: 0.9em;
      }
      
      /* 积分符号优化 */
      .katex .op-symbol.large-op {
        font-size: 0.9em;
      }
      
      /* 上标下标优化 */
      .katex .sup, .katex .sub {
        font-size: 0.8em;
      }
      
      /* 根号优化 */
      .katex .sqrt {
        font-size: 0.9em;
      }
      
      /* 括号优化 */
      .katex .delimsizing {
        font-size: 0.9em;
      }
    }
    
    /* 超小屏幕优化 */
    @media (max-width: 480px) {
      .katex {
        font-size: 0.8em !important;
        max-width: 100% !important;
        width: 100% !important;
        overflow-x: auto !important;
        box-sizing: border-box !important;
      }
      
      .katex-display {
        font-size: 0.75em !important;
        margin: 0.8em 0 !important;
        padding: 0.4em 0 !important;
        max-width: 100% !important;
        width: 100% !important;
        overflow-x: auto !important;
        box-sizing: border-box !important;
      }
      
      .katex-display > .katex {
        padding: 0 0.5em !important;
        max-width: 100% !important;
        width: 100% !important;
        overflow-x: auto !important;
        box-sizing: border-box !important;
      }
      
      /* 长公式滚动提示 */
      .katex-display::after {
        content: "← 滑动查看更多 →";
        display: block;
        text-align: center;
        font-size: 0.7em;
        color: #666;
        margin-top: 0.3em;
        opacity: 0.7;
      }
      
      .dark .katex-display::after {
        color: #999;
      }
    }
    
    /* 横屏优化 */
    @media (max-width: 768px) and (orientation: landscape) {
      .katex-display {
        font-size: 0.9em;
      }
      
      .katex {
        font-size: 0.95em;
      }
    }
    
    /* 强制防止公式溢出容器 */
    .prose .katex-display,
    .katex-display {
      max-width: 100% !important;
      width: 100% !important;
      overflow-x: auto !important;
      overflow-y: hidden !important;
      margin: 1em 0 !important;
      box-sizing: border-box !important;
    }
    
    /* 行内公式强制约束 */
    .prose .katex:not(.katex-display),
    .katex:not(.katex-display) {
      white-space: nowrap !important;
      overflow-x: auto !important;
      display: inline-block !important;
      max-width: 100% !important;
      box-sizing: border-box !important;
    }
    
    /* 所有KaTeX元素强制约束 */
    .katex,
    .katex * {
      max-width: 100% !important;
      box-sizing: border-box !important;
    }
    
    /* 文章容器强制约束 */
    article .katex-display {
      max-width: 100% !important;
      width: 100% !important;
      overflow-x: auto !important;
      margin: 1em 0 !important;
      padding: 0.5em 0 !important;
    }
    
    /* 确保父容器不会溢出 */
    .prose,
    article,
    main,
    div,
    body,
    html {
      overflow-x: hidden !important;
      max-width: 100% !important;
      box-sizing: border-box !important;
    }
    
    /* 特别针对博客文章容器的约束 */
    .prose article,
    article .prose,
    .prose .katex-display,
    article .katex-display {
      max-width: 100% !important;
      width: 100% !important;
      overflow-x: auto !important;
      overflow-y: hidden !important;
      box-sizing: border-box !important;
    }
    
    /* 强制所有数学公式容器约束 */
    .katex-display,
    .katex-display *,
    .katex,
    .katex * {
      max-width: 100% !important;
      box-sizing: border-box !important;
    }
    
    /* 移动端滚动条样式 */
    @media (max-width: 768px) {
      .katex-display::-webkit-scrollbar {
        height: 4px;
      }
      
      .katex-display::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 2px;
      }
      
      .katex-display::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 2px;
      }
      
      .katex-display::-webkit-scrollbar-thumb:hover {
        background: #a8a8a8;
      }
      
      .dark .katex-display::-webkit-scrollbar-track {
        background: #374151;
      }
      
      .dark .katex-display::-webkit-scrollbar-thumb {
        background: #6b7280;
      }
      
      .dark .katex-display::-webkit-scrollbar-thumb:hover {
        background: #9ca3af;
      }
    }
    
    /* 移动端滚动指示器 */
    .katex-display.scroll-right::after {
      content: "→";
      position: absolute;
      right: 5px;
      top: 50%;
      transform: translateY(-50%);
      color: #666;
      font-size: 12px;
      pointer-events: none;
      animation: pulse 2s infinite;
    }
    
    .katex-display.scroll-left::after {
      content: "←";
      position: absolute;
      left: 5px;
      top: 50%;
      transform: translateY(-50%);
      color: #666;
      font-size: 12px;
      pointer-events: none;
      animation: pulse 2s infinite;
    }
    
    .katex-display.scroll-both::before {
      content: "←";
      position: absolute;
      left: 5px;
      top: 50%;
      transform: translateY(-50%);
      color: #666;
      font-size: 12px;
      pointer-events: none;
      animation: pulse 2s infinite;
    }
    
    .katex-display.scroll-both::after {
      content: "→";
      position: absolute;
      right: 5px;
      top: 50%;
      transform: translateY(-50%);
      color: #666;
      font-size: 12px;
      pointer-events: none;
      animation: pulse 2s infinite;
    }
    
    @keyframes pulse {
      0%, 100% { opacity: 0.5; }
      50% { opacity: 1; }
    }
    
    .dark .katex-display.scroll-right::after,
    .dark .katex-display.scroll-left::after,
    .dark .katex-display.scroll-both::before,
    .dark .katex-display.scroll-both::after {
      color: #999;
    }
  </style>
</html>