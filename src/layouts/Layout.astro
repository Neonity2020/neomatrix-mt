---
import ThemeProvider from "../components/theme-provider";
import Navbar from "../components/navbar.tsx";
export interface Props {
  title: string;
  metaDescription?: string;
}

const { title, metaDescription } = Astro.props;
// import BaseHead from '../components/BaseHead.astro';
// import Footer from '../components/Footer.astro';
---
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <title>{title} by NEONITY</title>
    <meta name="description" content={metaDescription} />
    <meta name="generator" content={Astro.generator} />
    <!-- KaTeX CSS for LaTeX math rendering -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous" />
    <!-- <BaseHead title={title}/> -->
    <script>
      (function() {
        try {
          var theme = localStorage.getItem('theme');
          if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
          } else {
            document.documentElement.classList.remove('dark');
          }
        } catch (e) {}
      })();
    </script>
  </head>
  <body>
    <ThemeProvider client:only="react">
      <div class="tech-bg" style="z-index: -1; opacity: 0.7;"></div>
      <article>
        <div class="max-w-[375px] mx-auto mt-4 md:max-w-[684px] md:mx-auto">
          <Navbar client:only="react" />
        </div>
        <slot /> <!-- your content is injected here -->
      </article>
    </ThemeProvider>
    <!-- <Footer /> -->
  </body>
  <style>
    body {
      margin: 0;
      padding: 0;
      min-height: 100vh;
      position: relative;
      overflow-x: hidden;
    }
    .tech-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      z-index: 0;
      pointer-events: none;
      background: radial-gradient(circle at 50% 40%, #fff 0%, #f8f8f8 60%, #f3e7ff 100%);
      overflow: hidden;
      opacity: 0.7;
      animation: bgMove 10s ease-in-out infinite alternate;
    }
    .dark .tech-bg {
      background: radial-gradient(circle at 50% 40%, #181c24 0%, #23283a 60%, #2d3344 100%);
    }
    @keyframes bgMove {
      0% { background-position: 0% 50%; }
      100% { background-position: 100% 50%; }
    }
    .tech-bg::before {
      content: "";
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background-image: repeating-linear-gradient(90deg, rgba(255,255,255,0.05) 0, rgba(255,255,255,0.05) 1px, transparent 1px, transparent 40px),
                        repeating-linear-gradient(0deg, rgba(255,255,255,0.05) 0, rgba(255,255,255,0.05) 1px, transparent 1px, transparent 40px);
      pointer-events: none;
    }
    article {
      max-width: 800px;
      margin: 20px auto;
      position: relative;
      z-index: 1;
      background: rgba(255,255,255,0.92);
      color: #222;
      border-radius: 16px;
      box-shadow: 0 2px 16px 0 rgba(0,0,0,0.04);
      transition: background 0.3s, color 0.3s;
      padding: 10px 10px 50px 10px;
    }
    .dark article {
      background: rgba(24,28,36,0.96);
      color: #e5e7eb;
      box-shadow: 0 2px 16px 0 rgba(0,0,0,0.32);
    }
    .dark h1, .dark h2, .dark h3, .dark h4, .dark h5, .dark h6 {
      color: #fff;
    }
    .dark a {
      color: #7dd3fc;
      text-decoration-thickness: 2px;
    }
    .dark a:hover {
      color: #a5b4fc;
      text-decoration: underline;
    }
    .dark .text-gray-500, .dark .text-gray-700 {
      color: #b6b8c3 !important;
    }
    .dark .border, .dark .rounded-lg, .dark .rounded-md {
      border-color: #334155 !important;
    }
    .dark img {
      filter: brightness(0.92) contrast(1.08);
    }
    @media (max-width: 600px) {
      article {
        max-width: 100vw;
        margin: 8px 8px 0 8px;
        border-radius: 8px;
        padding: 8px 8px 32px 8px;
      }
    }
    @font-face {
      font-family: 'Source Han Serif SC';
      src: url('/fonts/SourceHanSerifCN-Regular.otf') format('opentype');
      font-weight: normal;
      font-style: normal;
    }
    
    /* KaTeX custom styles for dark mode */
    .dark .katex {
      color: #e5e7eb;
    }
    
    .dark .katex-display {
      color: #e5e7eb;
    }
    
    .dark .katex .mord {
      color: #e5e7eb;
    }
    
    .dark .katex .mbin {
      color: #e5e7eb;
    }
    
    .dark .katex .mrel {
      color: #e5e7eb;
    }
    
    .dark .katex .mopen {
      color: #e5e7eb;
    }
    
    .dark .katex .mclose {
      color: #e5e7eb;
    }
    
    .dark .katex .mpunct {
      color: #e5e7eb;
    }
    
    .dark .katex .mord.text {
      color: #e5e7eb;
    }
    
    /* Light mode KaTeX styles */
    .katex {
      color: #222;
    }
    
    .katex-display {
      color: #222;
    }
    
    .katex .mord {
      color: #222;
    }
    
    .katex .mbin {
      color: #222;
    }
    
    .katex .mrel {
      color: #222;
    }
    
    .katex .mopen {
      color: #222;
    }
    
    .katex .mclose {
      color: #222;
    }
    
    .katex .mpunct {
      color: #222;
    }
    
    .katex .mord.text {
      color: #222;
    }
  </style>
</html>